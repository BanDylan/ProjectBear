@model List<ProjectBear.CMS.ViewModels.PlayerViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Player Management</h2>
    <hr />
    <div style="margin-bottom:20px">
        <div>
            @using (Html.BeginForm("Index", "PlayerManagement"))
            {
                <input id="filter" placeholder="Player Name Filter" name="name" type="text" />
                <input type="submit" id="Search" value="Search" />
            }
        </div>
    </div>
    <div>
        @if (Model.Count > 0)
        {
            <table class="table bordered">
                <tr>
                    <th>Name</th>
                </tr>
                @foreach (var player in Model)
                {
                    <tr>
                        <td>@Html.ActionLink((player.MatchingPlayerName == "" ? player.CurrentSteamName : player.MatchingPlayerName), "ViewPlayer", "PlayerManagement", new { id = player.ProfileId }, null)</td>
                    </tr>
                }
            </table>
        }
        else
        {
            <label>No matches found.</label>
        }

    </div>

    <script type="text/javascript">

    </script>
